{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    // "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true, //  для ts imports
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "./build/**/*"
  ]
}